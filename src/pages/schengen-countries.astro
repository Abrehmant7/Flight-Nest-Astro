---

<Layout pageName="Schengen Countries">
   <!-- Header -->
   <section class="bg-white py-12 md:py-20 text-center">
      <h1 class="text-3xl md:text-5xl font-extrabold text-brand-dark mb-4">
         Schengen Countries
      </h1>
      <p class="text-gray-500 max-w-xl mx-auto px-6 text-lg">
         Click any country to see details
      </p>
   </section>

   <!-- Countries Grid -->
   <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-6">
         <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-6 max-w-6xl mx-auto"
         >
            {
               countries.map((country) => (
                  <a
                     href={`/${trendingVisas.includes(country.name) ? "visa/" + country.name.toLowerCase() : "contact.html"}`}
                     class="block flex items-center justify-between border-b border-gray-200 pb-4 group cursor-pointer hover:border-gray-300 transition-colors"
                  >
                     <div class="flex items-center gap-4">
                        <img
                           src={country.flag}
                           alt={country.name}
                           class="w-8 h-5 object-cover rounded-sm shadow-sm"
                        />
                        <h3 class="font-bold text-lg text-brand-dark group-hover:text-brand-blue transition-colors">
                           {country.name}
                        </h3>
                     </div>
                     <div class="text-gray-400 group-hover:text-brand-blue transition-colors">
                        <svg
                           class="w-5 h-5"
                           fill="none"
                           stroke="currentColor"
                           viewBox="0 0 24 24"
                        >
                           <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M14 5l7 7m0 0l-7 7m7-7H3"
                           />
                        </svg>
                     </div>
                  </a>
               ))
            }
         </div>
      </div>
   </section>
</Layout>
