---

<Layout pageName="Premium Countries">
    <!-- Header -->
    <section
        class="bg-white py-12 md:py-20 text-center border-b border-gray-100"
    >
        <h1 class="text-3xl md:text-5xl font-extrabold text-brand-dark mb-4">
            Other Countries
        </h1>
        <p class="text-gray-500 max-w-xl mx-auto px-6 text-lg">
            Explore visa requirements for countries worldwide
        </p>
    </section>

    <!-- Regions -->
    <div class="bg-gray-50 py-12 space-y-16">
        {
            countriesList.map((region) => (
                <div class="container mx-auto px-4">
                    <h2 class="text-2xl font-bold text-brand-dark mb-6">
                        {region.region}
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {region.countries.map((country) => (
                            <a
                                href={country.link}
                                class="bg-white rounded-xl p-6 hover:shadow-lg transition-shadow flex items-center gap-4"
                            >
                                <img
                                    src={country.flag}
                                    alt={country.name}
                                    class="w-10 h-7 rounded-md shadow-sm"
                                />
                                <span class="text-lg font-medium text-gray-700">
                                    {country.name}
                                </span>
                            </a>
                        ))}
                    </div>
                </div>
            ))
        }
    </div>
</Layout>
