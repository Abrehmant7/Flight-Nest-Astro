---
import Layout from "../layouts/Layout.astro";
const formfields = [
    {
        name: "Full Name",
        placeholder: "Enter Your Name",
    },
    {
        name: "Email Address",
        placeholder: "Enter Your Email",
    },
    {
        name: "Phone Number",
        placeholder: "Enter Phone Number",
    },
    {
        name: "Nationality",
        placeholder: "Enter Your Nationality",
    },
    {
        name: "Destination",
        placeholder: "Enter Destination",
    },
    {
        name: "Current City of Stay",
        placeholder: "Enter Current City",
    },
];
---

<Layout pageName="Contact">
    <!-- Contact Us Header -->
    <section class="bg-white py-12 md:py-20 text-center">
        <h1 class="text-3xl md:text-5xl font-extrabold text-brand-dark mb-4">
            Contact Us
        </h1>
        <p class="text-gray-500 max-w-xl mx-auto px-6">
            Please fill out the form below and our agents will reach you out.
        </p>
    </section>

    <!-- Contact Form Section -->
    <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4 relative z-20">
            <div
                class="bg-white rounded-3xl shadow-xl overflow-hidden max-w-4xl mx-auto border border-gray-100 p-8 md:p-12"
            >
                <form>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {
                            formfields.map((field) => (
                                <div class="flex flex-col gap-2 group">
                                    <label class="text-xs font-bold text-gray-500 uppercase tracking-wider group-focus-within:text-brand-blue transition-colors">
                                        {field.name}
                                    </label>
                                    <input
                                        type="text"
                                        placeholder={field.placeholder}
                                        class="w-full bg-gray-50 border-b-[2px] border-gray-200 rounded-lg px-4 py-3 focus:outline-none focus:border-brand-blue focus:bg-white focus:shadow-md transition-all duration-300 text-sm font-medium"
                                    />
                                </div>
                            ))
                        }
                    </div>

                    <!-- Submit Button -->
                    <div class="mt-10 text-center">
                        <button
                            type="button"
                            class="w-full md:w-auto px-10 bg-gradient-to-r from-brand-blue to-blue-500 hover:from-blue-700 hover:to-brand-blue text-white font-bold py-3 rounded-2xl transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-[1.01] text-lg tracking-wide uppercase"
                        >
                            Send Now
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</Layout>
