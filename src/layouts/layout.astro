---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookOnline - Your Perfect Destinations</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./src/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body class="bg-gray-50 text-gray-900">
    <!-- Navbar -->
    <nav
      class="bg-white py-2 px-6 md:px-12 flex items-center justify-between sticky top-0 z-50 shadow-sm"
    >
      <div class="flex items-center gap-2">
        <a href="/">
          <img
            class="w-16 h-16 rounded-full mix-blend-multiply"
            src="./public/images/flightnest.jpg"
            alt="flight nest logo"
          />
        </a>
      </div>

      <div
        class="hidden md:flex flex-1 justify-center items-center gap-6 text-sm font-medium text-gray-600"
      >
        {
          navLinks.map((link) => (
            <a href={link.href} class={`hover:text-brand-blue transition ${pageName === link.label ? "text-brand-blue" : ""}`}
          >{link.label}</a
        >
          ))
        }
      </div>

      <button
        class="hidden md:block bg-brand-blue text-white px-6 py-3 rounded-full hover:bg-sky-500 transition"
      >
        <a href="contact.html" class="transition">Contact us</a>
      </button>

      <button class="md:hidden text-gray-600 focus:outline-none">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </nav>
    <!-- nav end -->

    <slot />

    <!-- Footer -->
  <footer class="bg-[#1C1C1E] text-white py-16 px-6 md:px-0">
    <div class="container mx-auto grid grid-cols-1 md:grid-cols-4 gap-12">
      <div>
        <div class="text-2xl font-bold mb-6 flex items-center gap-1">
          <span class="font-normal text-3xl text-brand-blue">Flight</span>Nest
        </div>
        
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a href={link.href} aria-label={link.label} class="w-8 h-8 bg-white rounded-full flex items-center justify-center text-black hover:bg-brand-blue hover:text-white transition-all transform hover:scale-110">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d={link.path}
                  />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      

       <!-- Schengen Countries -->
       <div class="col-span-1 md:col-span-1">
         <h4 class="font-bold mb-4 text-brand-blue">SCHENGEN COUNTRIES</h4>
         <ul class="space-y-2 text-xs text-gray-400">
           {
            schengenCountries.map((country) => (
              <li>| <a href={country.href1} class="hover:text-white transition-colors">{country.label1}</a> | <a href={country.href2} class="hover:text-white transition-colors">{country.label2}</a></li>
            ))
           }
         </ul>
       </div>

       <!-- Site Map -->
       <div class="col-span-1 md:col-span-1">
         <h4 class="font-bold mb-4 text-brand-blue">SITE MAP</h4>
         <ul class="space-y-2 text-sm text-gray-400">
           {
            navLinks.map((link) => (
              <li><a href={link.href} class="hover:text-white transition-colors flex items-center gap-2"><span class="text-gray-600">>></span> {link.label}</a></li>
            ))
           }
         </ul>
       </div>

      <div>
        <h4 class="font-bold mb-4">Newsletter</h4>
        <div class="flex">
          <input type="email" placeholder="Enter email to join newsletter"
            class="flex-1 bg-[#333] text-sm text-white px-4 py-2 outline-none">
          <button class="bg-brand-blue text-white px-4 py-2 text-xs font-bold">SUBMIT</button>
        </div>
        <div class="mt-8 space-y-2">
          <div class="text-sm font-bold text-white uppercase">Mon to Sat - 9 am to 5 pm</div>
          <div class="text-sm text-gray-400">SUN & Public Holidays are OFF</div>
          <div class="font-bold text-sm text-white mt-4">
              Call Us: <a href="tel:+447380406155" class="hover:text-brand-blue transition-colors">+44 7380 406155</a>
          </div>
          <div class="font-bold text-sm text-white">
              Email: <a href="mailto:info@flightnest.uk" class="hover:text-brand-blue transition-colors">info@flightnest.uk</a>
          </div>
          <div class="text-sm text-gray-400">Visit Us: 3 Maryam close, Rainham London, RM13 9PE</div>
        </div>
      </div>
    </div>
    <div class="container mx-auto px-6 mt-16 text-xs text-gray-500 border-t border-gray-800 pt-8">
      <p>&copy; 2023 BookOnline.com.</p>
      <p class=" text-xs leading-relaxed">
             Disclaimer: We are a Private registered company and not affiliated with any Government agencies or any embassy of any country. We provide Professional service to the all national who is seeking to travel to Schengen zone.
        </p>
    </div>
  </footer>

  <a href="https://wa.me/447380406155" class="whatsapp-float" target="_blank">
    <i class="ri-whatsapp-fill"></i>
  </a>
  <a href="tel:+447380406155" class="phone-float">
    <i class="ri-phone-fill"></i>
  </a>
  
</body>

</html>