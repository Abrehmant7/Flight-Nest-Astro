---
import { Image } from "astro:assets";
import logo from "../assets/images/flightnest.jpg";

interface Props {
    pageName: string;
}

const { pageName } = Astro.props as Props;

interface NavLink {
    href: string;
    label: string;
}

const navLinks: NavLink[] = [
    { href: "/", label: "Home" },
    { href: "/schengen-countries", label: "Schengen Countries" },
    { href: "/premium-countries", label: "Premium countries" },
    { href: "/about-us", label: "About Us" },
    { href: "/FAQ", label: "FAQs" },
    { href: "/refund-policy", label: "Refund Policy" },
];
---

<!-- Navbar -->
<nav
    class="bg-white py-2 px-6 md:px-12 flex items-center justify-between sticky top-0 z-50 shadow-sm"
>
    <div class="flex items-center gap-2">
        <a href="/">
            <Image
                class="w-16 h-16 rounded-full mix-blend-multiply"
                src={logo}
                alt="flight nest logo"
            />
        </a>
    </div>

    <div
        class="hidden md:flex flex-1 justify-center items-center gap-6 text-sm font-medium text-gray-600"
    >
        {
            navLinks.map((link) => (
                <a
                    href={link.href}
                    class={`hover:text-brand-blue transition ${pageName === link.label ? "text-brand-blue" : ""}`}
                >
                    {link.label}
                </a>
            ))
        }
    </div>

    <button
        class="hidden md:block bg-brand-blue text-white px-6 py-3 rounded-2xl hover:bg-sky-500 transition"
    >
        <a href="/contact" class="transition">Contact us</a>
    </button>

    <button class="md:hidden text-gray-600 focus:outline-none">
        <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
    </button>
</nav>
<!-- nav end -->
