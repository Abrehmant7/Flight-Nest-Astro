---
import { Image } from "astro:assets";
import heroImage from "../assets/images/heroImage.avif";

const heroImageError = "https://placehold.co/1920x800?text=Travel+Hero";
const optionList = [
  { value: "visas", label: "Visas" },
  { value: "flights", label: "Flights" },
  { value: "hotels", label: "Hotels" },
  { value: "packages", label: "Packages" },
];
---

<!-- Hero Section -->
<header
  class="relative w-full h-125 md:h-150 overflow-hidden flex items-center justify-center text-white"
>
  <div class="absolute inset-0 z-0">
    <!-- Default Fallback Image -->
    <Image
      id="hero-bg"
      src={heroImage}
      alt="Background"
      class="w-full h-full object-cover brightness-75 transition-opacity duration-1000"
    />
  </div>

  <div class="relative z-10 text-center w-full max-w-5xl px-4">
    <h1 class="text-4xl md:text-6xl font-bold mb-12 drop-shadow-lg">
      Book Your Perfect Destinations
    </h1>

    <div
      class="bg-white/90 backdrop-blur-md rounded-3xl px-3 py-1 shadow-xl flex flex-col md:flex-row items-center max-w-2xl mx-auto border border-white/50 transition-all hover:shadow-2xl hover:bg-white"
    >
      <div
        class="flex-1 w-full px-6 py-2 relative border-b md:border-b-0 md:border-r border-gray-100"
      >
        <div class="absolute left-6 top-1/2 -translate-y-1/2 text-brand-blue">
          <i class="fas fa-search"></i>
        </div>
        <select
          id="hero-service-select"
          class="w-full bg-transparent font-bold text-gray-700 text-lg outline-none appearance-none cursor-pointer h-full py-3 pl-8"
        >
          <option disabled selected value="">Select Services</option>
          {
            optionList.map((option) => {
              return <option value={option.value}>{option.label}</option>;
            })
          }
        </select>
        <div
          class="absolute inset-y-0 right-4 flex items-center pointer-events-none text-brand-blue"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>
      <button
        id="hero-dropdown-btn"
        class="w-full md:w-auto bg-brand-blue hover:from-blue-600 hover:to-brand-blue text-white font-bold py-3 px-10 rounded-2xl transition-all shadow-lg hover:shadow-brand-blue/30 whitespace-nowrap text-lg mt-2 md:mt-0 md:ml-2"
      >
        Search
      </button>
    </div>
  </div>
</header>
