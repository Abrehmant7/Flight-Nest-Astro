---
const refundEligibility = [
    {
        title: "Duplicate Payments",
        description:
            "If you have been inadvertently charged multiple times for the same service due to technical or processing errors on our part.",
    },
    {
        title: "Service Delivery Failure",
        description:
            "If we are unable to commence or complete your visa application processing due to circumstances within our control or operational errors.",
    },
    {
        title: "Pre-Processing Cancellation",
        description:
            "If you choose to cancel your application before we have initiated the processing phase and no work has been undertaken on your behalf.",
    },
];

const nonRefundable = [
    {
        title: "Embassy/Consulate Decision:",
        description:
            "Visa rejection or refusal by the relevant embassy, consulate, or immigration authority.",
    },
    {
        title: "Applications in Progress:",
        description:
            "Cases where your application has been officially submitted to the relevant authorities or is currently under review.",
    },
    {
        title: "Client-Related Issues:",
        description:
            "Applications affected by incorrect, incomplete, or misleading information provided by the applicant.",
    },
    {
        title: "Third-Party Fees:",
        description:
            "Government fees, embassy charges, or other third-party costs that have been paid on your behalf.",
    },
];

const submissionReqs = [
    "All refund requests must be submitted in writing via email to <strong>info@flightnest.co.uk</strong>.",
    "Requests must be made within seven (7) calendar days of the original payment date.",
    "Please include your transaction reference number, payment details, and reason for the refund request.",
];

const processingTimeline = [
    "Refund requests will be reviewed and processed within 7-10 business days from the date of receipt.",
    "Approved refunds will be credited to the original payment method used for the transaction.",
    "You will receive email confirmation once the refund has been processed.",
];

const importantNotes = [
    "Refund amounts may be subject to applicable processing fees charged by payment providers.",
    "Partial refunds may apply depending on the stage of service completion.",
    "This policy is subject to applicable consumer protection laws in the United Kingdom.",
];
---

<!-- REFUND POLICY -->
<section id="refund-policy" class="mb-20">
    <h1
        class="text-3xl md:text-4xl font-extrabold text-brand-dark mb-8 border-b-4 border-brand-blue pb-4 inline-block"
    >
        Refund Policy
    </h1>

    <p class="text-gray-600 mb-8 leading-relaxed">
        We are committed to providing exceptional visa consultation services
        with complete transparency. This refund policy outlines the terms and
        conditions governing refund requests for our services.
    </p>

    <h2 class="text-2xl font-bold text-gray-800 mb-4 mt-8">
        Refund Eligibility
    </h2>
    <p class="text-gray-600 mb-4">
        We offer refunds under the following circumstances:
    </p>

    <div class="space-y-6">
        {
            refundEligibility.map((item) => (
                <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
                    <h3 class="font-bold text-brand-blue text-lg mb-2">
                        {item.title}
                    </h3>
                    <p class="text-gray-600 text-sm">{item.description}</p>
                </div>
            ))
        }
    </div>

    <h2
        class="text-2xl font-bold text-gray-800 mb-4 mt-12 pb-2 border-b border-gray-200"
    >
        Non-Refundable Circumstances
    </h2>
    <p class="text-gray-600 mb-4">
        Please note that refunds will not be provided in the following
        situations:
    </p>
    <ul class="list-disc list-outside ml-6 space-y-2 text-gray-600">
        {
            nonRefundable.map((item) => (
                <li>
                    <strong>{item.title}</strong> {item.description}
                </li>
            ))
        }
    </ul>

    <h2
        class="text-2xl font-bold text-gray-800 mb-4 mt-12 pb-2 border-b border-gray-200"
    >
        Refund Request Process
    </h2>

    <h3 class="text-xl font-bold text-gray-700 mb-3 mt-6">
        Submission Requirements
    </h3>
    <ul class="list-disc list-outside ml-6 space-y-2 text-gray-600 mb-6">
        {submissionReqs.map((req) => <li set:html={req} />)}
    </ul>

    <h3 class="text-xl font-bold text-gray-700 mb-3">Processing Timeline</h3>
    <ul class="list-disc list-outside ml-6 space-y-2 text-gray-600">
        {processingTimeline.map((item) => <li>{item}</li>)}
    </ul>

    <h2
        class="text-2xl font-bold text-gray-800 mb-4 mt-12 pb-2 border-b border-gray-200"
    >
        Important Notes
    </h2>
    <ul class="list-disc list-outside ml-6 space-y-2 text-gray-600">
        {importantNotes.map((note) => <li>{note}</li>)}
    </ul>

    <h2
        class="text-2xl font-bold text-gray-800 mb-4 mt-12 pb-2 border-b border-gray-200"
    >
        Contact Information
    </h2>
    <p class="text-gray-600 mb-2">
        For refund requests, inquiries, or clarification regarding this policy,
        please contact us:
    </p>
    <p class="text-gray-600">
        <strong>Email:</strong> info@flightnest.co.uk
    </p>
    <p class="text-gray-600"><strong>Phone:</strong> +44 7380 406155</p>
    <p class="text-gray-600">
        <strong>Website:</strong> https://flightnest.co.uk
    </p>
    <p class="text-gray-500 text-sm mt-4 italic">
        This refund policy is effective as of the date of publication and may be
        updated periodically. Please review the most current version on our
        website.
    </p>
</section>
