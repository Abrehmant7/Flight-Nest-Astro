---
import { Image } from "astro:assets";
import netherlands from "../assets/images/netherlands.jpg";
import greece from "../assets/images/greece.jpg";
import paris from "../assets/images/paris.jpg";
import newyork from "../assets/images/new-york.jpg";
import sydney from "../assets/images/sydney.jpg";

const cities = [
  {
    name: "Amsterdam",
    hotels: "283 Hotels",
    image: netherlands,
  },
  {
    name: "Athens",
    hotels: "143 Hotels",
    image: greece,
  },
  {
    name: "Paris",
    hotels: "485 Hotels",
    image: paris,
  },
  {
    name: "New York",
    hotels: "188 Hotels",
    image: newyork,
  },
  {
    name: "Sydney",
    hotels: "99 Hotels",
    image: sydney,
  },
];
---

<!-- Top Destinations -->
<section class="py-16 overflow-hidden bg-white">
  <div class="container mx-auto px-6 mb-8">
    <h2 class="text-2xl md:text-3xl font-extrabold text-brand-dark text-center">
      Top Destinations
    </h2>
  </div>

  <div class="relative w-full">
    <div
      class="flex gap-6 overflow-x-auto snap-x snap-mandatory pb-4 w-full px-6 no-scrollbar"
    >
      {
        cities.map((city) => (
          <a
            href="/contact"
            class="min-w-[280px] w-[280px] shrink-0 group cursor-pointer snap-center block relative rounded-2xl overflow-hidden shadow-md"
          >
            <div class="h-[380px] w-full relative">
              <Image
                src={city.image}
                class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                alt={city.name}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex flex-col justify-end p-6">
                <h3 class="text-2xl font-bold text-white mb-1">{city.name}</h3>
                <span class="text-white/90 font-medium text-sm">
                  {city.hotels}
                </span>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
