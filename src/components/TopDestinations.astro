---
const placeholderImage = "https://placehold.co/600x400?text=New+York";
const cities = [
  {
    name: "New York",
    hotels: "283 Hotels",
    image: "../public/images/new-york.jpg",
  },
  {
    name: "Las Vegas",
    hotels: "143 Hotels",
    image: "../public/images/vegas.jpg",
  },
  {
    name: "Houston",
    hotels: "485 Hotels",
    image: "../public/images/houston.jpg",
  },
  {
    name: "Orlando",
    hotels: "188 Hotels",
    image: "../public/images/orlando.jpg",
  },
  {
    name: "Sydney",
    hotels: "99 Hotels",
    image: "../public/images/sydney.jpg",
  },
];
---

<!-- Top Destinations -->
<section class="py-16 overflow-hidden bg-gray-50">
  <div class="container mx-auto px-6 mb-8">
    <h2 class="text-2xl md:text-3xl font-extrabold text-brand-dark text-center">
      Top Destinations
    </h2>
  </div>

  <div class="relative w-full">
    <div class="flex gap-6 overflow-x-auto snap-x snap-mandatory pb-4 w-full">
      {
        cities.map((city) => (
          <div class="min-w-[300px] shrink-0 group cursor-pointer snap-center">
            <div class="h-48 md:h-64 rounded-2xl overflow-hidden mb-4 relative shadow-md">
              <img
                src={city.image}
                onerror={`this.src='${placeholderImage}'`}
                class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                alt={city.name}
              />
            </div>
            <div class="text-center">
              <h3 class="text-lg font-bold text-gray-900 inline">
                {city.name},
              </h3>
              <span class="text-pink-500 font-medium">{city.hotels}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
