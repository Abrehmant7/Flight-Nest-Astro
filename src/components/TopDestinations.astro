---
import { Image } from "astro:assets";
import netherlands from "../assets/images/netherlands.jpg";
import greece from "../assets/images/greece.jpg";
import paris from "../assets/images/paris.jpg";
import switzerland from "../assets/images/switzerland.jpg";
import sydney from "../assets/images/sydney.jpg";

const cities = [
  {
    name: "Amsterdam",
    hotels: "283 Hotels",
    image: netherlands,
  },
  {
    name: "Athens",
    hotels: "143 Hotels",
    image: greece,
  },
  {
    name: "Paris",
    hotels: "485 Hotels",
    image: paris,
  },
  {
    name: "Zurich",
    hotels: "188 Hotels",
    image: switzerland,
  },
  {
    name: "Sydney",
    hotels: "99 Hotels",
    image: sydney,
  },
];
---

<!-- Top Destinations -->
<section class="py-16 overflow-hidden bg-white">
  <div class="container mx-auto px-6 mb-8">
    <h2 class="text-2xl md:text-3xl font-extrabold text-brand-dark text-center">
      Top Destinations
    </h2>
  </div>

  <div class="relative w-full">
    <div class="flex gap-6 overflow-x-auto snap-x snap-mandatory pb-4 w-full">
      {
        cities.map((city) => (
          <div class="min-w-[300px] shrink-0 group cursor-pointer snap-center">
            <div class="h-48 md:h-64 rounded-2xl overflow-hidden mb-4 relative shadow-md">
              <Image
                src={city.image}
                class="w-full h-full object-cover transition duration-500 group-hover:scale-110"
                alt={city.name}
              />
            </div>
            <div class="text-center">
              <h3 class="text-lg font-bold text-gray-900 inline">
                {city.name},
              </h3>
              <span class="text-pink-500 font-medium">{city.hotels}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
