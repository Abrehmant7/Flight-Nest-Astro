const trendingHash = new Set([
  "france", "greece", "portugal", "estonia", "netherlands", 
  "canada", "denmark", "switzerland", "sweden", "usa"
]);

const getCountryLink = (label: string) => {
  const country = label.replace(" VISA", "").toLowerCase();
  if (trendingHash.has(country)) {
    return `/visa/${country}`;
  }
  return "/contact";
};

