---
const trendingVisas = [
    {
        name: "France",
        flag: "https://flagcdn.com/w40/fr.png",
    },
    {
        name: "Greece",
        flag: "https://flagcdn.com/w40/gr.png",
    },
    {
        name: "Portugal",
        flag: "https://flagcdn.com/w40/pt.png",
    },
    {
        name: "Estonia",
        flag: "https://flagcdn.com/w40/ee.png",
    },
    {
        name: "Netherlands",
        flag: "https://flagcdn.com/w40/nl.png",
    },
    {
        name: "Canada",
        flag: "https://flagcdn.com/w40/ca.png",
    },
    {
        name: "Denmark",
        flag: "https://flagcdn.com/w40/dk.png",
    },
    {
        name: "Switzerland",
        flag: "https://flagcdn.com/w40/ch.png",
    },
    {
        name: "Sweden",
        flag: "https://flagcdn.com/w40/se.png",
    },
    {
        name: "USA",
        flag: "https://flagcdn.com/w40/us.png",
    },
];
---

<!-- Trending Visas -->
<section id="trending-visas" class="py-20 md:py-16 bg-white">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center text-brand-dark mb-12">
            Trending Visas
        </h2>

        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8 max-w-6xl mx-auto"
        >
            {
                trendingVisas.map((visa) => (
                    <a
                        href={`/visa/${visa.name.toLowerCase()}`}
                        class="block flex items-center justify-between border-b border-gray-200 pb-4 group cursor-pointer hover:border-gray-300 transition-colors"
                    >
                        <div class="flex items-center gap-4">
                            <img
                                src={visa.flag}
                                alt={visa.name}
                                class="w-8 h-5 object-cover rounded-sm shadow-sm"
                            />
                            <h3 class="font-bold text-lg text-brand-dark group-hover:text-brand-blue transition-colors">
                                {visa.name}
                            </h3>
                        </div>
                        <div class="text-gray-400 group-hover:text-brand-blue transition-colors">
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"
                                />
                            </svg>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
